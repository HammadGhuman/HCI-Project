<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightConversion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:background="#151515"
                android:gravity="center"
                android:text="Main Menu "
                android:textAlignment="center"
                android:textColor="#E3D0D0"
                android:textSize="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/KG"
                    android:layout_width="136dp"
                    android:layout_height="155dp"
                    app:srcCompat="@drawable/weight" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="227dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:background="#A3BECA"
                    android:gravity="center"
                    android:text="Weight"
                    android:textAlignment="center"
                    android:textSize="32dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Tempe"
                    android:layout_width="136dp"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/thermometericon" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="227dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:background="#A3BECA"
                    android:gravity="center"
                    android:text="Temperature"
                    android:textAlignment="center"
                    android:textSize="32dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LengIMG"
                    android:layout_width="136dp"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lengthicon" />

                <TextView
                    android:id="@+id/lenght"
                    android:layout_width="227dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:background="#A3BECA"
                    android:backgroundTint="#A3BECA"
                    android:gravity="center"
                    android:text="Length"
                    android:textAlignment="center"
                    android:textSize="32dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PressImg"
                    android:layout_width="136dp"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/pressuregaugeicon" />

                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="227dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:background="#A3BECA"
                    android:gravity="center"
                    android:text="Preussure"
                    android:textAlignment="center"
                    android:textSize="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/volIMG"
                    android:layout_width="136dp"
                    android:layout_height="155dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/measureicon" />

                <TextView
                    android:id="@+id/volume"
                    android:layout_width="227dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:background="#A3BECA"
                    android:gravity="center"
                    android:text="Volume"
                    android:textAlignment="center"
                    android:textSize="32dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>